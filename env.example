# Mercury Relay Environment Variables
# Copy this file to .env and customize the values

# Access Control
OWNER_NPUB=npub1m4ny6hjqzepn4rxknuq94c2gpqzr29ufkkw7ttcxyak7v43n6vvsajc2jl
ACCESS_UPDATE_INTERVAL=1h
ACCESS_RELAY_URL=https://relay.damus.io
ACCESS_PUBLIC_READ=true
ACCESS_PUBLIC_WRITE=false

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Admin Configuration
ADMIN_ENABLED=true
ADMIN_PORT=8081
ADMIN_API_KEY=change_this_secret_key

# Quality Control
QUALITY_SPAM_THRESHOLD=0.7
QUALITY_RATE_LIMIT=60
QUALITY_MAX_CONTENT_LENGTH=10000

# Storage
XFTP_ENABLED=true
XFTP_SERVER_URL=xftp://localhost:443
XFTP_STORAGE_DIR=/srv/xftp

# Cache
REDIS_HOST=redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=28h

# Message Queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=nostr_events
RABBITMQ_QUEUE=event_queue
RABBITMQ_TTL=28h

# Database
POSTGRES_HOST=postgres:5432
POSTGRES_USER=mercury
POSTGRES_PASSWORD=mercury
POSTGRES_DBNAME=mercury_relay
POSTGRES_SSLMODE=disable

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/mercury-relay.log
