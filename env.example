# Mercury Relay Environment Variables
# Copy this file to .env and customize as needed

# Basic Configuration
NOSTR_RELAY_PORT=8080
ADMIN_PORT=8081
REST_API_PORT=8082
LOG_LEVEL=info

# gRPC Configuration
GRPC_ENABLED=true
GRPC_SERVER_HOST=localhost
GRPC_SERVER_PORT=9090
GRPC_TLS_ENABLED=false
GRPC_CERT_FILE=
GRPC_KEY_FILE=

# Streaming Configuration
STREAMING_ENABLED=true
UPSTREAM_RELAYS=wss://theforest.nostr1.com,wss://orlay-relay.imwald.eu,wss://nostr.land,wss://nostr21.com

# Alternative relay configurations:
# UPSTREAM_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.snort.social
# UPSTREAM_RELAYS=wss://nostr.wine,wss://nostr21.com
# UPSTREAM_RELAYS=wss://your-custom-relay.com

# Tor Configuration
TOR_ENABLED=false
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051

# XFTP Configuration
XFTP_ENABLED=false
XFTP_PORT=8083
XFTP_MAX_FILE_SIZE=50MB
XFTP_STORAGE_PATH=/var/lib/xftp

# Database Configuration
DB_TYPE=sqlite
DB_PATH=/app/data/mercury.db
# For PostgreSQL:
# DB_TYPE=postgres
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=mercury_relay
# DB_USER=mercury
# DB_PASSWORD=change_this_password

# Redis Configuration
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
API_KEY=change_this_secret_key
CORS_ENABLED=true
CORS_ORIGINS=*

# Admin Configuration
MERCURY_ADMIN_NPUBS=npub1flnpz46qtu3jwpsglzacmjrglnssyaxdvcfe5yf0hg3g4qad9xds2g784j,npub1v30tsz9vw6ylpz63g0a702nj3xa26t3m7p5us8f2y2sd8v6cnsvq465zjx,npub1l5sga6xg72phsz5422ykujprejwud075ggrr3z2hwyrfgr7eylqstegx9z,npub1m4ny6hjqzepn4rxknuq94c2gpqzr29ufkkw7ttcxyak7v43n6vvsajc2jl

# Authentication (supports both hex and bech32 formats)
MERCURY_PRIVATE_KEY=nsec1your-private-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Quality Control
QUALITY_CONTROL_ENABLED=true
SPAM_THRESHOLD=0.5
MAX_CONTENT_LENGTH=100000

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s